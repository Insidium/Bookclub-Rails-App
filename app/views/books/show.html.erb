<h2><%= @book.title%></h2>
<% if user_signed_in? %>
    <% if @can_add %>
        <p> <%= link_to "Add to my list", add_book_to_list_path(id: @book), class: "btn btn-info" %></p>
    <% else %>
        <p> <%= link_to 'Remove from my list', @book, method: "delete", class: "btn btn-danger"%></p>
    <% end %>
<% end %>
<p><%= @book.author.name%></p>
<p><%= @book.genre%></p>
<p><%= link_to "Back", :back %></p>
