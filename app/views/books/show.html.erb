<h2><%= @book.title%></h2>
<% if user_signed_in? %>
    <% if @can_add %>
        <p><%= link_to "Add to my list", add_book_to_list_path(id: @book)%></p>
    <% else %>
        <p class="link book-item"> <%= link_to 'Remove from my list', @book, method: "delete"%></p>
    <% end %>
<% end %>
<p><%= @book.author.name%></p>
<p><%= @book.genre%></p>
<p><%= link_to "Back", :back %></p>
