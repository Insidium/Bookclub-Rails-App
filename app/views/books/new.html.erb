<%= form_with model: @book do |form| %>
    <p>
        <%= label(:title, "Title") %>
        <%= form.text_field :title, required: true, minlength: 1 %>
    </p>
    <p>
        <%= label(:genre, "Genre") %>
        <%= form.text_field :genre %>
    </p>

    <p>
       <%= form.label :picture %>
       <%= form.file_field :picture, accept:'image/png,image/gif,image/jpeg,image/jpg' %>
    </p>
        <%= form.label :price %>
        <%= form.number_field :price, min: 0, step: "0.01" %>
    <p>Author</p>
    <p>
        <%= label(:first_name, "First Name") %>
        <%= form.text_field :first_name %>
    </p>
    <p>
        <%= label(:last_name, "Last Name") %>
        <%= form.text_field :last_name, required: true, minlength: 1 %>
    </p>
    <%= form.submit "Add Book", class: "btn btn-success" %>
<% end %>